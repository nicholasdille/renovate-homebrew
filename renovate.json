{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "enabledManagers": [
    "regex"
  ],

  "major": {
    "labels": ["type/renovate", "bump/major"]
  },
  "minor": {
    "labels": ["type/renovate", "bump/minor"]
  },
  "patch": {
    "labels": ["type/renovate", "bump/patch"]
  },
  "pin": {
    "labels": ["type/renovate", "bump/pin"]
  },
  "digest": {
    "labels": ["type/renovate", "bump/digest"]
  },

  "regexManagers": [
    {
      "fileMatch": [
        "^scripts/.*\\.sh"
      ],
      "matchStrings": [
        "DATASOURCE=(?<datasource>.+?)\\nREPO=(?<depName>.+?)\\nVERSION=(?<currentValue>.*)\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],

  "packageRules": [
    {
      "matchPaths": [
        "^renovate/*.sh"
      ]
    },
    {
      "packageNames": [
        "AkihiroSuda/cni-isolation",
        "AkihiroSuda/nerdctl",
        "AkihiroSuda/sshocker",
        "aquasecurity/trivy",
        "containerd/containerd",
        "containerd/stargz-snapshotter",
        "containernetworking/plugins",
        "containers/fuse-overlayfs",
        "containers/podman",
        "deislabs/oras",
        "docker/app",
        "docker/buildx",
        "docker/cli",
        "docker/compose-cli",
        "docker/hub-tool",
        "estesp/manifest-tool",
        "go-task/task",
        "kubermatic/kubeone",
        "kubernetes-sigs/cluster-api",
        "kubernetes-sigs/cluster-api-provider-aws",
        "moby/buildkit",
        "norouter/norouter",
        "opencontainers/runc",
        "regclient/regclient",
        "rootless-containers/rootlesskit",
        "rootless-containers/slirp4netns",
        "vmware-tanzu/carvel-imgpkg",
        "vmware-tanzu/carvel-kapp",
        "vmware-tanzu/carvel-ytt"
      ],
      "extractVersion": "^v(?<version>.+)$"
    }
  ]
}
