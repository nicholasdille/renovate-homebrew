{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "enabledManagers": [
    "regex"
  ],

  "major": {
    "labels": ["type/renovate", "bump/major"]
  },
  "minor": {
    "labels": ["type/renovate", "bump/minor"]
  },
  "patch": {
    "labels": ["type/renovate", "bump/patch"]
  },
  "pin": {
    "labels": ["type/renovate", "bump/pin"]
  },
  "digest": {
    "labels": ["type/renovate", "bump/digest"]
  },

  "regexManagers": [
    {
      "fileMatch": [
        "^scripts/.*\\.sh"
      ],
      "matchStrings": [
        "DATASOURCE=(?<datasource>.+?)\\nREPO=(?<depName>.+?)\\nVERSION=(?<currentValue>.*)\\n(VERSIONING=(?<versioning>.*)\\n)?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],

  "packageRules": [
    {
      "matchPackagePatterns": [
        "^.+"
      ],
      "matchPaths": [
        "^renovate/*.sh"
      ]
    },
    {
      "matchPackageNames": [
        "containers/crun"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)(\\.(?<patch>\\d+))?$"
    },
    {
      "matchPackageNames": [
        "containers/fuse-overlayfs",
        "cyberark/kubeletctl",
        "ncopa/su-exec",
        "salesforce/sloop",
        "tianon/gosu"
      ],
      "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)(\\.(?<patch>\\d+))?$"
    },
    {
      "matchPackageNames": [
        "docker/compose"
      ],
      "extractVersion": "^v?(?<version>.+)$"
    },
    {
      "packageNames": [
        "jaspervdj/patat",
        "netblue30/firejail"
      ],
      "versioning": "loose",
      "extractVersion": "^(?<version>\\d+(\\.\\d+)+)$"
    },
    {
      "packageNames": [
        "microsoft/WSL2-Linux-Kernel"
      ],
      "versioning": "loose",
      "extractVersion": "^linux-msft-wsl-(?<version>\\d+(\\.\\d+)+)$"
    },
    {
      "packageNames": [
        "nelhage/reptyr"
      ],
      "extractVersion": "^reptyr-(?<version>.+)$"
    },
    {
      "packageNames": [
        "google/gvisor"
      ],
      "versioning": "loose",
      "extractVersion": "^release-(?<version>\\d{8}\\.\\d)$"
    },
    {
      "packageNames": [
        "AkihiroSuda/cni-isolation",
        "AkihiroSuda/sshocker",
        "aelsabbahy/goss",
        "anuvu/stacker",
        "anuvu/zot",
        "aristanetworks/bst",
        "aquasecurity/kube-bench",
        "aquasecurity/trivy",
        "armosec/kubescape",
        "chanwit/ekz",
        "checkpoint-restore/criu",
        "containerd/containerd",
        "containerd/fuse-overlayfs-snapshotter",
        "containerd/imgcrypt",
        "containerd/nerdctl",
        "containerd/stargz-snapshotter",
        "containernetworking/plugins",
        "containers/bubblewrap",
        "containers/buildah",
        "containers/common",
        "containers/conmon",
        "containers/dnsname",
        "containers/image",
        "containers/podman",
        "containers/storage",
        "ContainerSSH/ContainerSSH",
        "crazy-max/artifactory-cleanup",
        "crazy-max/diun",
        "crazy-max/yasu",
        "cri-o/cri-o",
        "danielb42/kubeswitch",
        "deislabs/oras",
        "distribution/distribution",
        "docker/app",
        "docker/buildx",
        "docker/cli",
        "docker/compose-cli",
        "docker/hub-tool",
        "docker/scan-cli-plugin",
        "EnvCLI/EnvCLI",
        "estesp/manifest-tool",
        "firecracker-microvm/firecracker",
        "genuinetools/img",
        "getoutreach/localizer",
        "getporter/porter",
        "go-task/task",
        "google/trillian",
        "homeport/dyff",
        "homeport/havener",
        "jpillora/chisel",
        "jstarks/npiperelay",
        "kubermatic/kubeone",
        "krallin/tini",
        "kubernetes-sigs/cluster-api",
        "kubernetes-sigs/cluster-api-provider-aws",
        "kubernetes-sigs/cri-tools",
        "loft-sh/loft",
        "loft-sh/vcluster",
        "microsoft/cascadia-code",
        "moby/buildkit",
        "moby/libnetwork",
        "moby/moby",
        "nalbury/promql-cli",
        "nestybox/sysbox",
        "norouter/norouter",
        "notaryproject/notary",
        "opencontainers/image-tools",
        "opencontainers/runc",
        "opencontainers/runtime-tools",
        "opencontainers/umoci",
        "openSUSE/catatonit",
        "rancher/kim",
        "regclient/regclient",
        "rootless-containers/rootlesskit",
        "rootless-containers/slirp4netns",
        "shipa-corp/ketch",
        "sigstore/cosign",
        "sigstore/rekor",
        "stefanprodan/kustomizer",
        "transparencylog/tl",
        "Trendyol/kink",
        "vmware-tanzu/carvel-imgpkg",
        "vmware-tanzu/carvel-kapp",
        "vmware-tanzu/carvel-kbld",
        "vmware-tanzu/carvel-kwt",
        "vmware-tanzu/carvel-vendir",
        "vmware-tanzu/carvel-ytt",
        "vmware-tanzu/buildkit-cli-for-kubectl",
        "weaveworks/ignite"
      ],
      "extractVersion": "^v(?<version>.+)$"
    }
  ]
}
